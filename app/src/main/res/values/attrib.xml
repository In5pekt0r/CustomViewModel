<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GradientView">
        <attr name="backgroundColorFirst" format="color" />
        <attr name="backgroundColorSecond" format="color" />
        <attr name="circleGradientColorFirst" format="color"/>
        <attr name="circleGradientColorSecond" format="color"/>
    </declare-styleable>
    <attr name="gradientViewStyle" format="reference" />

    <style name="GradientViewStyle">
        <item name="backgroundColorFirst">@color/white</item>
        <item name="backgroundColorSecond">@color/black</item>
        <item name="circleGradientColorFirst">@color/purple_200</item>
        <item name="circleGradientColorSecond">@color/teal_200</item>
    </style>
</resources>